html
  body
    .jumbotron.text-center
      h1 Home Page 4 Life
      p {{ tagline }}
    .id-card-container.z-depth-1-half
      .text-center.phone-input-background.z-depth-1
        .phone-input-container
          input#phoneInput.form-control.input-phone(type="number" limit-to="10" placeholder="(123) 456-7890")
      .scrollable
        .create-container
          img(src="../img/slice.png")
        div(ng-repeat="customer in customers")
          id-card.id-card-template.animated.fadeInRight(info="customer" ng-click="select(customer)" ng-class="{highlighted: isSelected(customer)}")            
