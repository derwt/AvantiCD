#createContainer.container-search.animated.fadeInRight.hidden
  .header
    | {{ headers.create[randomIndex] }}
  form(name="createForm")
    md-chips(ng-model="newCustomer.phone" name="phoneNumbers" 
    readonly="chips.readonly" md-removable="chips.removable" 
    md-max-chips="chips.max" md-transform-chip="validateChip($chip, 'phone')"
    md-on-add="logSelected()" md-add-on-blur="true"
    md-separator-keys="chips.keys" placeholder="Add a phone number...") 
    .errors(ng-messages="createForm.phoneNumbers.$error")
      div(ng-message="md-max-chips") Maximum number of phone numbers reached.
      div(ng-show="newCustomer.phone.length === 0") Customer must have at least one phone number.
    md-input-container.md-block(style="margin-top:50px;")
      label Address
      input#addressInput(name="address" ng-model="newCustomer.address" 
      ng-pattern="/(^\\d+\\s[a-zA-Z]+\\s[a-zA-Z]+)$/")
      .errors(ng-messages="createForm.address.$error")
        div(ng-message="pattern") Please enter a valid Address.   
    #citySelect.customer-field
      div(ng-repeat="city in cities")
        button.btn.btn-city(
        ng-class="{ 'btn-outline-{{getCityColorByIndex($index)}}': true,\
        '{{ getCityColorByIndex($index) }}' : hover || cityButtonStates[$index], 'btn-city-selected' : cityButtonStates[$index] }"
        ng-mouseenter="hover = true" ng-mouseleave="hover = false" 
        ng-click="selectCity($index, cities);") {{ city }}
    md-input-container.md-block
      label Cross Street
      input#crossInput(name="cross" ng-model="newCustomer.cross")
    md-input-container.md-block
      label Customer Notes
      textarea#noteInput(ng-model="newCustomer.note" md-maxlength="150" rows="3" md-select-on-focus="")
    .text-center
      button#createButton.btn.red.darken-2(ng-click="createCustomer()") Create!
  md-button.button-back.md-icon-button.md-accent(aria-label="Back" ng-click="hideContainer()")
    i.material-icons arrow_back
